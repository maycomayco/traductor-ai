{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*",
			"!src/components/ui"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
            "suspicious":{
                "noArrayIndexKey":"off",
                "noUnknownAtRules":"off"
            },
            "a11y":"off"
		}
	},
    "javascript": {
        "formatter": {
          "semicolons": "asNeeded"
        }
      }
}
